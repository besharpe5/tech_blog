<div class="comments post-background">
  {{#each this}}
    <div class="card">
        <h3 class="card-header"></h3>
        <section class="comment card-body">
            <div class="text">
                {{comment_text}}
            </div>
            <div class="comment-un">
                {{user.username}}, {{format_date created_at}}
            </div>
        </section>
    </div>
  {{/each}}
</div>